@model IEnumerable<RukiKrukiWithUsers.Models.Product>

@{
    ViewBag.Title = "Materials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materials</h2>
<div class="row">

    @{
        string startRow = "<div class=\"row\">";
        string endRow = " </div>";
    }

    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i % 4 == 0)
        {
            @Html.Raw(startRow)
        }
        @Html.Partial("_PartialMaterials", Model.ElementAt(i));

        if (i % 4 == 3 || i == (Model.Count() - 1))
        {
            @Html.Raw(endRow)
        }
    }
   
</div>